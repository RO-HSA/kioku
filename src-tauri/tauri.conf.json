{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kioku",
  "version": "0.1.0",
  "identifier": "com.ro-hsa.kioku",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "kioku",
        "width": 1024,
        "height": 600
      }
    ],
    "security": {
      "capabilities": ["default", "zustand", "opener"],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlFMkJFNjE0REQyQTAyNDcKUldSSEFpcmRGT1lybnV4eU5nK1RaL1ZwYjdoYTFGN0ZLTEZIQWZ5VklzVmlZMkZwaHV3RExrNGIK",
      "endpoints": [
        "https://github.com/RO-HSA/kioku/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    },
    "deep-link": {
      "mobile": [
        {
          "scheme": ["kioku"],
          "appLink": false
        }
      ]
    }
  }
}
